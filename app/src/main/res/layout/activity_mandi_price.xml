<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background_color">

    <!-- Title Text for State Spinner -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select State"
        android:textSize="18sp"
        android:textColor="@color/primary_text"
        android:textStyle="bold"
        android:padding="8dp"
        android:layout_marginTop="16dp"/>

    <!-- State Spinner -->
    <Spinner
        android:id="@+id/spinnerState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:background="@drawable/spinner_background"
        android:padding="8dp"
        android:layout_marginBottom="16dp"/>

    <!-- Title Text for District Spinner -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select District"
        android:textSize="18sp"
        android:textColor="@color/primary_text"
        android:textStyle="bold"
        android:padding="8dp"
        android:layout_marginTop="16dp"/>

    <!-- District Spinner -->
    <Spinner
        android:id="@+id/spinnerDistrict"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:background="@drawable/spinner_background"
        android:padding="8dp"
        android:layout_marginBottom="16dp"/>

    <!-- Title Text for Commodity Spinner -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Commodity"
        android:textSize="18sp"
        android:textColor="@color/primary_text"
        android:textStyle="bold"
        android:padding="8dp"
        android:layout_marginTop="16dp"/>

    <!-- Commodity Spinner -->
    <Spinner
        android:id="@+id/spinnerCommodity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:background="@drawable/spinner_background"
        android:padding="8dp"
        android:layout_marginBottom="16dp"/>

    <!-- Button to Fetch Price -->
    <Button
        android:id="@+id/buttonFetchPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Price"
        android:textColor="#FFFFFF"
        android:background="@drawable/input_background"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:textStyle="bold"/>

    <!-- TextView to Display Price -->
    <TextView
        android:id="@+id/textViewPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:textColor="@color/primary_text"
        android:padding="16dp"
        android:layout_marginTop="24dp"
        android:textStyle="bold"
        android:background="@drawable/input_background"
        android:gravity="center"/>
</LinearLayout>
