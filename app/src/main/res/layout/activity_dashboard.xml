<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@color/background_color">

    <!-- TextView for Header -->
    <TextView
        android:layout_width="394dp"
        android:layout_height="100dp"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:text="SELECT A SERVICE"
        android:textColor="@color/primary_text"
        android:textSize="34sp"
        android:textStyle="bold" />

    <!-- First Row of Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <!-- Mandi Price Button -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnMandiPrice"
                android:layout_width="match_parent"
                android:layout_height="189dp"
                android:layout_marginBottom="8dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Mandi Price"
                android:scaleType="fitCenter"
                android:src="@drawable/mandi" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:gravity="center"
                android:text="Mandi Price"
                android:textColor="@color/primary_text"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Weather Button -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnWeather"
                android:layout_width="match_parent"
                android:layout_height="184dp"
                android:layout_marginBottom="8dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Weather"
                android:scaleType="fitCenter"
                android:src="@drawable/weather" />

            <TextView
                android:layout_width="180dp"
                android:layout_height="46dp"
                android:gravity="center"
                android:text="Weather"
                android:textColor="@color/primary_text"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <!-- Second Row of Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <!-- Rent Button -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnRent"
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:layout_marginBottom="8dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Rent"
                android:scaleType="fitCenter"
                android:src="@drawable/rent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="Rent"
                android:textColor="@color/primary_text"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- News Button -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnNews"
                android:layout_width="match_parent"
                android:layout_height="189dp"
                android:layout_marginBottom="8dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="News"
                android:scaleType="fitCenter"
                android:src="@drawable/news" />

            <TextView
                android:layout_width="190dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="News"
                android:textColor="@color/primary_text"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
